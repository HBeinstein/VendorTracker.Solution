<h1>Add a new order for @Model.Name</h1>

<form action="/vendors/@Model.ID/orders" method="post">

  <input id="vendorID" name="vendorID" type="hidden" value="@Model.ID">

  @* Title *@
  <label for="orderTitle">Order Title</label>
  <input id="orderTitle" name="orderTitle" type="text">

  @* Description *@
  <label for="orderDescription">Items in Order</label>
  <input id="orderDescription" name="orderDescription" type="text">

  @* Delivery *@
  <label for="orderDeliveryDate">Date of Delivery</label>
  <input id="orderDeliveryDate" name="orderDeliveryDate" type="text">

  @* Price *@
  <label for="orderTotalPrice">Total Price of Order</label>
  <input id="orderTotalPrice" name="orderTotalPrice" type="text">

  @* Comments *@
  <label for="orderComments">Comments</label>
  <input id="orderComments" name="orderComments" type="text">

  @* Submit *@
  <button type='submit'>Add Order</button>
</form>