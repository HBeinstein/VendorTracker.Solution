@using VendorTracker.Models;

<h1> Order Items</h1>

@if (Model.Count == 0)
{
  <p>There are no items in the order.</p>
}
<ul>
  @foreach (Item item in Model)
  {
    <li><a href='/items/@item.ID'>@item.Description</a></li>
  }
</ul>

<a href="/items/new">Add a new item to the order.</a> 

<form action="/items/delete" method="post">
  <button type="submit" name="button">Clear All</button>
</form>
