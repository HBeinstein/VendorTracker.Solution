@using VendorTracker.Models;

<h3>This vendor has ordered:</h3>

<ol>
@foreach (Order order in @Model["orders"])
{
  <li><a href='/vendors/@Model["vendor"].ID/orders/@order.ID'>@order.Description</a></li>
}
</ol>

<p><a href='/vendors/@Model["vendor"].ID/orders/new'>Add a new order to order</a></p>
<p><a href='/vendors'>Return to vendor list</a></p>
<p><a href='/'>Go Home</a></p>