@using VendorTracker.Models;

<h3>This vendor has ordered:</h3>

<ol>
@foreach (Item item in @Model["items"])
{
  <li><a href='/vendors/@Model["vendor"].ID/items/@item.ID'>@item.Description</a></li>
}
</ol>

<p><a href='/vendors/@Model["vendor"].ID/items/new'>Add a new item to order</a></p>
<p><a href='/vendors'>Return to vendor list</a></p>
<p><a href='/'>Go Home</a></p>